<odoo>
  <data>

    <record id="view_operation_routing_view" model="ir.ui.view">
        <field name="name">view.operation.routing.view</field>
        <field name="model">router.operation</field>
        <field name="arch" type="xml">  
          <tree>
                    <field name="name"/>
                    <field name="company_id"/> 
                    <field name="workcenter_id" string="Operation Workcenter"/>
                    <field name="time_cycle_manual" string="Operation Duration"/>
              </tree>
        </field>
    </record>
    
  <record id="view_operation_routing_name" model="ir.ui.view">
        <field name="name">view.operation.routing.name</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='name']" position="before">
             
                    <field name="operation_name"/>
                    <field name="company_id"/>
                    <field name="workcenter_id" string="Operation Workcenter"/>
                    <field name="time_cycle_manual" string="Operation Duration"/>
        </xpath>
        </field>
    </record>
    
    <record id="view_operation_routing_name_tree" model="ir.ui.view">
        <field name="name">view.operation.routing.name.tree</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='name']" position="before">
                    <field name="operation_name"/>
                    <field name="company_id"/>
        </xpath>
          
          <xpath expr="//tree[1]" position="attributes">
                <attribute name="editable">bottom</attribute>
        </xpath>
          
          
        </field>
    </record>
    
    <record id="action_operation_name_menu" model="ir.actions.act_window">
            <field name="name">Operation Name</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">router.operation</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="operation_model.view_operation_routing_view"/>    
        </record>
    
     <menuitem
            name="Operation"
            id="menu_action_operation_name"
            action="action_operation_name_menu"
            parent="mrp.menu_mrp_manufacturing" 
            sequence="5"/>

   </data>
</odoo>
